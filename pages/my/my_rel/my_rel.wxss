/* pages/my/my_rel/my_rel.wxss */

.rel_nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 84rpx;
  background-color: #fff;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}

.rel_nav text {
  font-size: 26rpx;
  color: #000;
  padding: 26rpx 0;
  border-bottom: 2px solid #fff;
}

.rel_nav .text_actve {
  color: #fd4336;
  border-bottom: 2px solid #fd4336;
}

.rel_all {
  margin-top: 130rpx;
}

.rel_item {
  background-color: #fff;
  padding: 31rpx 0 0 0;
  margin-bottom: 31rpx;
}

.rel_content {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
  padding: 0 22rpx 0 45rpx;
}

.rel_text {
  font-size: 26rpx;
  color: #222;
  padding: 32rpx 22rpx 32rpx 45rpx;
  border-bottom: 1px solid #f3f5f7;
}

.rel_info {
  font-size: 28rpx;
  color: #222;
  padding: 32rpx 22rpx 32rpx 45rpx;
  border-bottom: 1px solid #f3f5f7;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.rel_info_r {
  font-size: 26rpx;
  color: #666;
}

.name_right {
  width: 97rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5deb6;
  color: #ffb029;
  font-size: 22rpx;
  margin-left: 11rpx;
}

.rongyu {
  font-size: 22rpx;
}

.icon-gerenrongyu {
  color: #ffb029;
  font-size: 25rpx;
}

.name_img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25rpx;
  height: 25rpx;
}

.fee {
  font-size: 20rpx;
  color: #ccc;
}

.status {
  justify-content: flex-end;
  border: 0;
}
.status:active{
  opacity: 0.7
}

.status .rel_status {
  border: 1px solid #fd5e2e;
  padding: 7rpx 35rpx;
  text-align: center;
  color: #FD5B2F;
  font-size: 26rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.rel_invited{
  color: #FD5E2E;
}
.rel_info:last-child{
  border: 0;
}