.login_box{
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0 200rpx 0;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}
.login_top{
  display: flex;
  align-items: center;
  flex-direction: column;
   width: 100%;
  padding: 0 8rpx;
  box-sizing: border-box
}
.bgc{
  width: 100%;

}
.logo{
  width: 310rpx;
    margin: 31rpx 0 0 0;
}
.login_box image{
  width: 100%;
}
button{
  background: none;
  border: 1px solid #FF4800;
  border-radius: 20rpx;
  width: 250rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FF4800;
  padding: 15rpx 0;
  line-height: unset;
}
button::before{
  border: 0;
}
button:active{
  background: none;
  opacity: 0.7;
}