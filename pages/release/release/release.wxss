/* pages/release/release.wxss */

page {
  background-color: #f5f6f8;
}

.rel_tips {
  font-size: 26rpx;
  color: #fd5a2f;
  background-color: rgba(255, 167, 141, 0.4);
  padding: 23rpx 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  /* margin-bottom: 22rpx; */
}

.rel_content {
  background-color: #fff;
  font-size: 26rpx;
  padding: 30rpx 20rpx;
}

.rel_content textarea {
  height: 155rpx;
}

.textarea {
  color: #ccc;
  font-size: 22rpx;
}

.border1 {
  border: 0;
  border-bottom: 1px solid #f3f5f7;
}

.add_photo {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 150rpx;
  width: 150rpx;
  font-size: 22rpx;
  background-color: #f5f6f8;
  border-radius: 10rpx;
  color: #999;
  overflow: hidden;
  margin: 0 20rpx 10rpx 0;
  position: relative;
}

.add_photo .iconfont {
  font-size: 38rpx;
  color: #ccc;
}

.imgs_box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.imgs_box image {
  width: 100%;
}

.rel_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #222;
  border-top: 1px solid #f3f5f7;
  padding: 34rpx 25rpx 34rpx 45rpx;
  background-color: #fff;
}

.rel_item input {
  flex: 1;
  margin-left: 48rpx;
  height: 100%;
  box-sizing: border-box;
}

.fee_box {
  justify-content: flex-start;
}

.rel_input {
  color: #ccc;
  font-size: 24rpx;
}

.fee_box .rel_input {
  color: #ccc;
  margin-left: 55rpx;
  font-size: 24rpx;
}

.fee_box .rel_fee {
  margin-left: 55rpx;
  font-size: 28rpx;
}

.picker_box {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  margin-left: 10rpx;
}

.picker_box picker {
  width: 100%;
  display: inline-block;
  text-align: right;
  color: #666;
  font-size: 26rpx;
  height: 100%;
}

.picker_box .icon-tiaozhuanqianwangyoujiantouxiangyouxiayibuxianxing {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.notrequire_view {
  flex: 1;
}

.notrequire input {
  width: 100%;
  margin: 0;
  padding: 30rpx 0;
  display: inline-block;
}

.rel_btn {
  line-height: unset;
  margin: 35rpx 24rpx;
  padding: 25rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
  box-shadow: 5rpx 0 18rpx rgba(253, 92, 47, 0.38);
  background: -webkit-linear-gradient(left, #fd4336, #fd5e2e); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #fd4336, #fd5e2e); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #fd4336, #fd5e2e); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #fd4336, #fd5e2e); /* 标准的语法 */
}

.imgs_box .icon-quxiao {
  color: rgba(0, 0, 0, 0.6);
  font-size: 40rpx;
  position: absolute;
  right: 0;
  top: -5rpx;
  z-index: 5;
}

form {
  display: block;
  overflow: hidden;
}

.marginTop {
  margin-top: 100rpx;
}
